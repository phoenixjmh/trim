                "--build",
                "bin"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
         
             "label": "run",
             "type": "shell",
             "command": "./bin/Debug/trim",
             "args": ["res/input3.mp4"],
